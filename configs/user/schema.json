{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "model": {
      "type": "object",
      "properties": {
        "definition": {
          "type": "object",
          "properties": {
            "module": {
              "description": "The python module to load.",
              "type": "string"
            },
            "package": {
              "description": "The python package to load.",
              "type": "string"
            }
          },
          "required": [
            "module",
            "package"
          ]
        },
        "params": {
          "type": "object",
          "description": "The hyper-parameters to use for this model during training."
        },
        "path": {
          "type": "string",
          "description": "The path to the pre-saved tensorflow model to load during evaluation."
        }
      },
      "required": [
        "definition",
        "params",
        "path"
      ]
    },
    "data_loader": {
      "type": "object",
      "properties": {
        "definition": {
          "type": "object",
          "properties": {
            "module": {
              "description": "The python module to load.",
              "type": "string"
            },
            "package": {
              "description": "The python package to load.",
              "type": "string"
            }
          },
          "required": [
            "module",
            "package"
          ]
        }
      },
      "required": [
        "definition"
      ]
    }
  },
  "required": [
    "model",
    "data_loader"
  ]
}
